
<table class="table table-bordered" >
  

  <tbody>
    <% @lists.each do |list| %>

      <% if list.completed %>
          <tr class="table-secondary">
            <td class="striker"><%= link_to list.description, edit_list_path(list) %></td>
            <td>
              <center>
                <%= form_for(list) do |f| %>
                <%= f.text_field :description, type: 'hidden' %>
                <%= f.check_box :completed, :checked => false, :style => 'visibility: hidden' %>
                <%= f.submit "완료", class: 'btn btn-outline-secondary btn-sm' %>
                <% end %>
              </center>
            </td>
            <td>
              <center>
                <%= link_to '삭제', list, class: 'btn btn-outline-success btn-sm', method: :delete, data: { confirm: '삭제할까요?' } %>
              </center>
            </td>
          </tr>
        
      <% else %>
          <tr>
            <td><%= link_to list.description, edit_list_path(list) %></td>
            <td>
               <center>
                <%= form_for(list) do |f| %>
                <%= f.text_field :description, type: 'hidden' %>
                <%= f.check_box :completed, :checked => true, :style => 'visibility: hidden' %>
                <%= f.submit "하는 중", class: 'btn btn-outline-danger btn-sm' %>
                <% end %>
              </center>
            </td>
            <td>
              <center>
                <%= link_to '삭제', list, class: 'btn btn-outline-success btn-sm', method: :delete, data: { confirm: '삭제할까요?' } %>
              </center>
            </td>
          </tr>
      <% end %>
    
    <% end %>
  </tbody>
</table>

<br>

